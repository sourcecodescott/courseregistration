<?xml version="1.0" encoding="UTF-8"?>

    <android.support.constraint.ConstraintLayout tools:context=".ViewCourseDetail"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:text="Course Details" android:layout_marginEnd="7dp" android:layout_marginTop="8dp" android:id="@+id/textView2"/>

    <TextView android:layout_height="46dp" android:layout_width="368dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.052" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:id="@+id/txtCourseCode" android:hint="Course Code" app:layout_constraintTop_toBottomOf="@+id/textView2" android:inputType="textPersonName" android:ems="10" android:layout_marginStart="8dp"/>

    <TextView android:layout_height="46dp" android:layout_width="368dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.052" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:id="@+id/txtCourseName" android:hint="Course Name" app:layout_constraintTop_toBottomOf="@+id/txtCourseCode" android:inputType="textPersonName" android:ems="10" android:layout_marginStart="8dp"/>

    <TextView android:layout_height="46dp" android:layout_width="368dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.052" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:id="@+id/txtcourse_day" android:hint="Day" app:layout_constraintTop_toBottomOf="@+id/txtCourseName" android:inputType="textPersonName" android:ems="10" android:layout_marginStart="8dp"/>

    <TextView android:layout_height="46dp" android:layout_width="368dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.052" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:id="@+id/txtcourse_time" android:hint="Time" app:layout_constraintTop_toBottomOf="@+id/txtcourse_day" android:inputType="textPersonName" android:ems="10" android:layout_marginStart="8dp"/>

    <TextView android:layout_height="46dp" android:layout_width="368dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.052" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:id="@+id/txtprogram" android:hint="Program" app:layout_constraintTop_toBottomOf="@+id/txtcourse_time" android:inputType="textPersonName" android:ems="10" android:layout_marginStart="8dp"/>

    <TextView android:layout_height="46dp" android:layout_width="368dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:id="@+id/txtcourse_description"
        android:hint="Description" app:layout_constraintTop_toBottomOf="@+id/txtprogram"
        android:inputType="textPersonName" android:ems="10" android:layout_marginStart="8dp"/>


    <TextView
        android:id="@+id/txtenrolled"
        android:layout_width="368dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Students Enrolled"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtcourse_time"
        app:layout_constraintVertical_bias="0.0" />

    -

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnResgister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="register"
            android:text="Register" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>